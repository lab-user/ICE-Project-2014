				each ticket, i in ticketlist
					if "PLUMgrid" == ticket.partner
						- noentry = false
						tr
							td #{ticket.id}
							td(title='#{ticket.description}') #{ticket.topic}
							td #{ticket.priority}
							td #{ticket.status}
							if ticket.processed == false
								td(style='color: darkred') #{ticket.processed}
							else
								td(style='color: #192d6c') #{ticket.processed}
				if (noentry)
					tr
						td(colspan="100%")
							i No entries found.
		div(id='table')
			h2.
				Tool 2
	p(style="clear:both")
	h1
		a(id="boundary") boundary
	div(id='grad')
		div(id='table')
			h2.
				Tool 1
			- noentry = true
			table(width="100%")
				tr
					td(width="10%") ID
